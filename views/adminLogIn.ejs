<%- include('./header') %>
<body class="bg-light">
    <div class="container">
      
        <!-- card -->
        <div>
            <form id='form'name='form' method="post" action="/adminMain" class="bg-light">
                <h4 class="text-center mt-3 bg-secondary text-white">教師ページ</h4>
                <br>
                  
                <div class="form-group">
                    
                        <% if (message !== '') { %>
                            <div class="alert alert-danger" role="alert">
                                <%= message %>
                            </div>
                        <% } %>
                    <label for="reportCategory" class="row ml-1">
                        <h5>ユーザID</h5 >
                    </label>

                    <input type="text" class="form-control border-dark" name="login_id" size="30" minlength="8" maxlength="8" required>
                </div>

                <div class="form-group">
                    <label for="attendance" class="row ml-1">
                        <h5>パスワード</h5>
                    </label>
                    <input type="password" class="form-control border-dark" name="password" size="30" minlength="5" maxlength="5" required>
                
                </div>

                <input type="hidden"  name="userId" value="<%= userId %>">
                <input type="hidden" name="displayName" value="<%= displayName %>">

                <br>
                <div class="row">
                    <input type="submit" class="mx-auto btn btn-secondary btn-lg w-50"></button>
                </div>

            </form>
                
        </div>
            
    </div>
</body>
<%- include('./footer') %>